extends navigation

block content
  .container
    .card
      .card-header
        Make Post
      .card-body
        form(method="POST" action="/posts" id="new-post")
          textarea.form-control(rows="2", name="post", placeholder="What's on your mind ?")
      .card-footer
        button.btn.btn-primary(type="submit" form="new-post") Post
    
    .posts
      each post in posts
        .post
          .card
            .card-body
              p= post.content
              .like-button
                span.fas.fa-thumbs-up.mr8(title='Like Post')
            .comments
            ul.list-group
              each comment in post.comments
                li.list-group-item.d-flex.justify-content-between.align-items-center= comment.content
                  .like-button
                    span.fas.fa-thumbs-up.mr8(title='Like Comment')
            .card-footer
                form(method="POST" action="/posts/" + post.id + "/comments")
                  .flex
                    input.form-control(type="text" placeholder="Say something, nice..." name="comment").mr8
                    button.btn.btn-sm.btn-warning(type="submit") Comment
          
